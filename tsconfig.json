{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ES2022",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": { "*": ["./src/*"] },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "strictNullChecks": true,
        "strict": true
    },
    "include": [
        "src",
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    // "include": [
    //     ".eslintrc.js",
    // ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
